        <div class="tab-pane active" id="col1TG<%= @user.techgroups.index(group) +1 %>">
            students:<%= @user.level_one(@user.techgroups.index(group),"Tech").count %><br>
            bonus :Rwf 5000<br>
            total bonus: <%= "#{@user.level_one(@user.techgroups.index(group),"Tech").count * 5000}"%><br>
            reward: No Reward
            <br>
            <h2>List Students</h2>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Full Name</th>
                  <th>Program</th>
                  <th>District</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
              <% @user.level_one(@user.techgroups.index(group), "Tech").each do |student| %>
                <tr>
                  <td><%= student.first_name %> <%= student.last_name%></td>
                  <td><%= student.studentInfo.program_category.name%></td>
                  <td><%= student.studentInfo.district.name%></td>
                  <td><%= student.studentInfo.created_at %></td>
