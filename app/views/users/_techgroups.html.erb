<% @user.techgroups.each do |group|%>
  <h2> Group <%= @user.techgroups.index(group) +1 %></h2>
  <div class="panel col-md-offset-2">
    <div class="panel-heading" style="background-color: #0b56a8;">
      <h3 class="panel-title" style="color: white;">All Levels</h3>
      <span class="pull-right">
        <!-- Tabs -->
        <ul class="nav panel-tabs">
          <li class="active"><a href="#col1TG<%= @user.techgroups.index(group) +1 %>" data-toggle="tab">Level 1</a></li>
          <li><a href="#col2TG<%= @user.techgroups.index(group) +1 %>" data-toggle="tab">Level 2</a></li>
          <li><a href="#col3TG<%= @user.techgroups.index(group) +1 %>" data-toggle="tab">Level 3</a></li>
          <li><a href="#col4TG<%= @user.techgroups.index(group) +1 %>" data-toggle="tab">Level 4</a></li>
