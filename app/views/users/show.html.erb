
<div class="container">  
  <div class="row">
    <div class="col-md-12 col-xs-12 thumbnail application-box">
      <h1 class="text-center application-header"><strong><%= "#{@user.first_name} #{@user.last_name}"%></strong></h1>

      <h1><span style="color: green"><%= Date.today.strftime("%B %Y")%> Payment:</span><u><%= render "monthpay" %></u></h1>


      <a class="btn btn-register pull-right" href="/signup?country_id=<%=current_user.country.id %>">Register a Student</a>
      <div class="text-center">


        <!-- Rewards carousel -->

        <h2 class="text-center" style="color: white;"><strong>Rewards</strong></h2>

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
            <li data-target="#myCarousel" data-slide-to="5"></li>
            <li data-target="#myCarousel" data-slide-to="6"></li>
            <li data-target="#myCarousel" data-slide-to="7"></li>
            <li data-target="#myCarousel" data-slide-to="8"></li>
            <li data-target="#myCarousel" data-slide-to="9"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">

            <div class="item active">
              <img class="carousel-img" style="height: 300px;" src="http://cdn.mos.cms.futurecdn.net/Mffc35PH77Dq7USrHb4qNm-1200-80.jpg">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="https://pisces.bbystatic.com/BestBuy_US/images/products/5723/5723427ld.jpg;maxHeight=460;maxWidth=460">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="https://www.marwadieducation.edu.in/ckeditor/UploadImages/636263040606873271_mefgi-scholarship.png">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="https://www.bikesure.co.uk/bikesureblog/wp-content/uploads/2017/02/energica-e1487336127380.jpg">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="https://static.pexels.com/photos/112460/pexels-photo-112460.jpeg">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="http://www.narokrealestate.com/wp-content/uploads/2014/05/Cheap-Plots-of-Land-for-SAle-in-Narok-County-in-Kenya11.jpg">
            </div>

            <div class="item">
              <img class="carousel-img" style="height: 300px;" src="https://static.pexels.com/photos/164516/pexels-photo-164516.jpeg">
            </div>

          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
<!-- commission table -->
      </div>
      <br>
      <br>
        <div class="col-md-12 col-xs-12">
          <center>
            <a href="/bonus/technical/<%= @user.id %>" class= "btn btn-primary btn-lg">View Bonus from Technical Groups</a>
            <a href="/bonus/languages/<%= @user.id %>" class= "btn btn-primary btn-lg">Veiw Bonus from Languages Groups</a>
            <a href="/bonus/traffic/<%= @user.id %>" class= "btn btn-primary btn-lg">View Bonus from Traffic Group</a>
          </center>
        </div>
    </div>
  </div>
</div>