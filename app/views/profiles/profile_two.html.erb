<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"> Student Registration Information </h3>
    </div>

    <div class="row">
      <div class="col-md-3 col-lg-3 " align="center"> <img alt="Country Icon" src="https://mqfoia-dm2306.files.1drv.com/y4mc3V1ptDTgeUQhugNej_qsif32FDGjbuBqVP2u6KfUKDE8ElCUopAx_IxkZc9WQ8c_FhD0aOT9a0IGAY1_zbijb3tJ-h9tx93MIIDeVhZr9Dq-AYcbdb7QeeLPaS4LE51Sf1wCo4fCW4aGSpMIc1OYXut21xncOPL5PcEUU00KECgXebdxmuFtMyp0GLAzC3qTBPmcmuTpr-hfqtFCidalA?width=225&height=225&cropmode=none" class="img-circle img-responsive"> 
      </div> 

      <div class=" col-md-9 col-lg-9 "> 
        <table class="table table-user-information">
          <tbody>
            <h4> Application Information </h4> 
            <tr>
              <td>Registra:</td>
              <td> <%= @studentInfo.registrar.first_name %> <%= @studentInfo.registrar.last_name %> </td>
            </tr>
            <tr>
              <td>Country:</td>
              <td> <%= @studentInfo.student.country.name %></td>
            </tr>
            <tr>
              <td>District:</td>
              <td> <%= @studentInfo.district.name %></td>
            </tr>
            <tr>
              <td>Program Enrolled: </td>
              <td> <%= @studentInfo.program_category.name %></td>
            </tr>
            <tr>
              <td>Course:</td>
              <td> <%= @studentInfo.course.name %></td>
            </tr>
            <tr>
              <td>Education Level:</td>
              <td> <%= @studentInfo.education_level %></td>
            </tr>

            <tr>
              <td>Application Status:</td>
              <td class="approved"> 
                <% if @studentInfo.status == false %>
                <p style="color: red">Pending</p> <span>
                <% if current_user.admin == true%>
                <%= link_to "Click to Approve", "/student_infos?appr=#{@studentInfo.id}" %>
                <% end %>
                <% else %>
                Approved
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <a href="profile-one" class="btn btn-primary">Previous</a>
      </div>
    </div>
    <div class="panel-footer">
      <a data-original-title="Commission Details" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary">Bonus</a>
      <span class="pull-right">
        <a href="edit.html" data-original-title="Edit user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
        <a data-original-title="Remove user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
      </span>
    </div>
  </div>

</div>
</div>