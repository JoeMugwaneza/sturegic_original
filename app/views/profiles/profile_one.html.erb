<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"> <%= "#{@user.first_name} #{@user.last_name}" %> Personal Infomration</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3 " align="center"> <img alt="Country Icon" src="https://9sbrqw-dm2306.files.1drv.com/y4mmyZiNwE0GNwhhOD2u4zy0w3wZRGy1vgf4Hn1tsk8Q_lXQCAiWVpPYjsuIY-a-1VziDLwRbOCfOuH7jUVwHhshfX2HlFGXQwOBrMfQ5Rj4ITMqAFmV5UjB--onMWUTV5LFn4BNM5U53Mr05aRtxqdIgrX5-f2NjFRzZC5YxxTXlWChnxm3IaLv4I379R5Ak5KCu2imUOYj0HFO3N95RgW7w?width=244&height=120&cropmode=none" class="img-responsive"> </div>

        <div class=" col-md-9 col-lg-9 "> 
          <table class="table table-user-information">
            <tbody>
              <h4> Personal Information </h4> 
              <tr>
                <td>Name:</td>
                <td><%= @user.first_name%> <%= @user.last_name%> </td>
              </tr>
              <tr>
                <td>Username:</td>
                <td><%= @user.username %></td>
              </tr>
              <tr>
                <td>Country:</td>
                <td><%= @user.country.name %></td>
              </tr>
              <tr>
                <td>Email Adress</td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>Gender:</td>
                <td> <%= @user.sex %></td>
              </tr>
              <tr>
                <td>Marital Status:</td>
                <td> <%= @user.martial_status %></td>
              </tr>
              <tr>
                <td>Bank</td>
                <td><%= @user.bank if @user.bank %></td>
              </tr>
              <tr>
                <td>Account N<sup>0</sup>:</td>
                <td><%= @user.bank_account if @user.bank_account %>
              </tr>
              <tr>
                <td>Telephone</td>
                <td><%= @user.tel%></td>
              </tr> 
              <tr>
                <td>Role</td>
                <td><%= @user.role %></td>
              </tr>
            </tbody>
          </table>
          <% if @user.role == "Student"%> 
            <a href="profile-two" class="btn btn-primary">Next</a>
          <% end %>
        </div>
      </div>
    </div>
    
    <% if not current_user && current_user.admin %>
    <div class="panel-footer">
      <a href="/students/<%= current_user.friendly_id %>" data-original-title="commission Details" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary">Bonus</a>
      <span class="pull-right">
        <a href="edit" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
        <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
      </span>
    </div>
    <% end %>
  </div>
</div>