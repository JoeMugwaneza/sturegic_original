<div class="container">
  <div class="login-container">
            <div id="output"></div>
            <div class="avatar"></div>
            <div class="form-box">
<%= form_tag sessions_path do %>
  <div class="field" name="user" type="text" placeholder="username">
  
    <%= text_field_tag :email, nil, placeholder: 'email...' %>
  </div>
  <div class="field" type="password" placeholder="password">
  
    <%= password_field_tag :password, nil, placeholder: 'password...'%>
    
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
  <div class="field">
    <%= label_tag :remember_me %>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>
  <div class="actions"><%= submit_tag "Login", class: "btn btn-info btn-block login" %></div>
<% end %>


